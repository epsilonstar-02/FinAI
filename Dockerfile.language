# Dockerfile.language
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends build-essential && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install requirements
COPY agents/language_agent/requirements-language.txt .
RUN pip install --no-cache-dir -r requirements-language.txt

# Copy the agent code
COPY agents/language_agent/ ./agents/language_agent/

# Set environment variables
ENV PYTHONPATH=/app
ENV GEMINI_MODEL="gemini-flash"
ENV TIMEOUT=10

# Expose the port the app runs on
EXPOSE 8004

# Command to run the application
CMD ["uvicorn", "agents.language_agent.main:app", "--host", "0.0.0.0", "--port", "8004"]
