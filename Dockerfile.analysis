FROM python:3.11-slim

WORKDIR /app

COPY agents/analysis_agent/requirements-analysis.txt ./
RUN pip install --no-cache-dir -r requirements-analysis.txt

COPY agents/analysis_agent/ ./agents/analysis_agent/

EXPOSE 8007

CMD ["uvicorn", "agents.analysis_agent.main:app", "--host", "0.0.0.0", "--port", "8007"]
